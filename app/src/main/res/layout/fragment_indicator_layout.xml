<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/spacing_12dp"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_8dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_20sp"
        tools:text="nwndkjankdjnj"
        android:textColor="@color/textColorWhite"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_8dp"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_16sp"
        android:text="@string/set_parameters"
        android:textColor="@color/textColorWhite"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8dp"
        android:layout_marginEnd="@dimen/spacing_8dp"
        android:paddingTop="@dimen/spacing_12dp"
        android:paddingBottom="@dimen/spacing_12dp"
        android:background="@color/textColorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/parameter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@+id/parameter_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Set Parameters" />

        <EditText
            android:id="@+id/parameter_value"
            android:layout_width="@dimen/editText_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</layout>